<script>
    document.getElementById('menuToggle').addEventListener('click', function() {
    var slider = document.getElementById('slider');
    
    if (slider.style.display === 'none' || slider.style.display === '') {
        slider.style.display = 'block';
        // Optionally, add slide-in animation logic here
    } else {
        slider.style.display = 'none';
        // Optionally, add slide-out animation logic here
    }
});

// Close slider if clicked outside
document.addEventListener('click', function(e) {
    var slider = document.getElementById('slider');
    var button = document.getElementById('menuToggle');
    
    if (!button.contains(e.target) && !slider.contains(e.target)) {
        slider.style.display = 'none';
    }
});

</script>

