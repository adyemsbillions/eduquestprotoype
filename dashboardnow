<script>
$(document).ready(function() {
    // Handle like button click via AJAX
    $(".like-button").on("click", function() {
        var postId = $(this).data("post-id");

        // Show loading message inside the post
        $("#like-loading-" + postId).show();
        $(".like-button[data-post-id='" + postId + "']").prop("disabled", true);  // Disable the button

        $.ajax({
            url: "", // Same file, since everything is handled here
            type: "POST",
            data: { 
                like_post: true,
                post_id: postId
            },
            success: function(response) {
                var likeCountElement = $("#post-" + postId).find(".like-count");
                var likedMessageElement = $("#post-" + postId).find("#liked-message-" + postId);

                // Update the like count immediately
                likeCountElement.text(response.like_count + " Likes");
                likedMessageElement.show().fadeOut(3000);

                // Hide the loading message
                $("#like-loading-" + postId).fadeOut(1000);

                // Re-enable the like button
                $(".like-button[data-post-id='" + postId + "']").prop("disabled", false);
            },
            error: function() {
                alert("An error occurred while liking the post.");
                // Hide loading message if error occurs
                $("#like-loading-" + postId).fadeOut(1000);
                $(".like-button[data-post-id='" + postId + "']").prop("disabled", false);
            }
        });
    });

    // Handle comment form submission via AJAX
    $(".comment-form").on("submit", function(e) {
        e.preventDefault();

        var postId = $(this).data("post-id");
        var commentText = $(this).find("textarea").val();

        if (commentText.trim() === "") return;

        // Disable the comment submit button to prevent multiple submissions
        $(this).find(".submit-comment-button").prop("disabled", true);

        // Show loading message inside the post
        $("#like-loading-" + postId).show();

        $.ajax({
            url: "", // Same file, since everything is handled here
            type: "POST",
            data: {
                post_id: postId,
                comment_text: commentText
            },
            success: function(response) {
                // Clear the comment form
                $(".comment-form[data-post-id='" + postId + "'] textarea").val('');
                // Update the comments section for the current post with new comments
                $("#comments-list-" + postId).html(response.comments_html);

                // Hide the loading message
                $("#like-loading-" + postId).fadeOut(1000);

                // Re-enable the comment submit button
                $(".submit-comment-button[data-post-id='" + postId + "']").prop("disabled", false);
            },
            error: function() {
                alert("An error occurred while submitting the comment.");
                // Hide loading message if error occurs
                $("#like-loading-" + postId).fadeOut(1000);
                $(".submit-comment-button[data-post-id='" + postId + "']").prop("disabled", false);
            }
        });
    });
});
</script>

</body>
